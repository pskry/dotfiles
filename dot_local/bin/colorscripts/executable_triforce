#!/usr/bin/env sh

initializeANSI() {
  esc=""

  Bf="${esc}[30m"
  rf="${esc}[31m"
  gf="${esc}[32m"
  yf="${esc}[33m"
  bf="${esc}[34m"
  pf="${esc}[35m"
  cf="${esc}[36m"
  wf="${esc}[37m"

  Bfbright="${esc}[90m"
  rfbright="${esc}[91m"
  gfbright="${esc}[92m"
  yfbright="${esc}[93m"
  bfbright="${esc}[94m"
  pfbright="${esc}[95m"
  cfbright="${esc}[96m"
  wfbright="${esc}[97m"

  Bb="${esc}[40m"
  rb="${esc}[41m"
  gb="${esc}[42m"
  yb="${esc}[43m"
  bb="${esc}[44m"
  pb="${esc}[45m"
  cb="${esc}[46m"
  wb="${esc}[47m"

  ON="${esc}[1m"
  OFF="${esc}[22m"
  italicson="${esc}[3m"
  italicsoff="${esc}[23m"
  ulon="${esc}[4m"
  uloff="${esc}[24m"
  invon="${esc}[7m"
  invoff="${esc}[27m"

  reset="${esc}[0m"
}

initializeANSI

